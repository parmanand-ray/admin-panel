
<div class="container-fluid mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold">Manage Products</h3>
    <a href="/products/add" class="btn btn-primary">
      <i class="bi bi-plus-lg"></i> Add New Product
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Image</th>
              <th>Title</th>
              <th>Categories</th>
              <th>Price</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (products.length === 0) { %>
              <tr>
                <td colspan="7" class="text-center text-muted py-3">
                  No products found.
                </td>
              </tr>
            <% } else { %>
              <% products.forEach((product, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>

                  <!-- First Image -->
                  <td style="width:100px;">
                    <% if (product.images && product.images.length > 0) { %>
                      <img src="<%= product.images[0] %>" class="img-thumbnail" alt="Product" style="max-width: 80px;">
                    <% } else { %>
                      <span class="text-muted">No Image</span>
                    <% } %>
                  </td>

                  <td>
                    <strong><%= product.product_title %></strong><br>
                    <small class="text-muted"><%= product.product_code || '-' %></small>
                  </td>

                  <!-- Multiple Categories -->
                  <td>
                    <% if (product.product_cat && product.product_cat.length > 0) { %>
                      <% product.product_cat.forEach(cat => { %>
                        <span class="badge bg-info text-dark me-1"><%= cat.catName %></span>
                      <% }) %>
                    <% } else { %>
                      <span class="text-muted">-</span>
                    <% } %>
                  </td>

                  <td>â‚¹ <%= product.product_price || '0.00' %></td>

                 <td>
  <div class="form-check form-switch">
    <input 
      class="form-check-input toggle-status" 
      type="checkbox" 
      data-id="<%= product._id %>" 
      <%= product.product_status === 'Y' ? 'checked' : '' %>>
    <label class="form-check-label">
      <%= product.product_status === 'Y' ? 'Active' : 'Inactive' %>
    </label>
  </div>
</td>


                  <td style="width:150px;">
                    <div class="d-flex gap-2">
                      <a href="/products/edit/<%= product._id %>" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                      </a>
                      <form action="/products/delete/<%= product._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Delete this product?')">
                        <button type="submit" class="btn btn-sm btn-danger">
                          <i class="bi bi-trash"></i> Delete
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>
document.addEventListener("DOMContentLoaded", function () {
  document.querySelectorAll(".toggle-status").forEach((toggle) => {
    toggle.addEventListener("change", async function () {
      const productId = this.dataset.id;
      const newStatus = this.checked ? "Y" : "N";

      try {
        const res = await fetch(`/products/toggle-status/${productId}`, {
          method: "PUT",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ product_status: newStatus }),
        });

        if (res.ok) {
          this.nextElementSibling.textContent =
            newStatus === "Y" ? "Active" : "Inactive";
        } else {
          alert("Failed to update status");
        }
      } catch (err) {
        console.error("Error toggling status:", err);
        alert("Server error");
      }
    });
  });
});
</script>

